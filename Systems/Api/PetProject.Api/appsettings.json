{
  "AllowedHosts": "*",

  "Serilog": {
    "MinimalLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "Microsoft.Hosting>Lifetime": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss:fff} {Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "./logs/logs-.txt",
          "rollingInterval": "Day",
          "outputTemplate": "[{Timestamp:HH:mm:ss:fff} {Level:u3}] {Message:lj}{NewLine}{Exception}]",
          "fileSizeLimitBytes": "5000000",
          "rollOnFileSizeLimit": true
        }
      }
    ]
  },

  "ConnectionStrings": {
    "MainDbContext": "Server=localhost;Port=5433;Database=MLF;User Id=postgres;Password=123456789;"
  },

  "General": {
    "SwaggerVisible": "true"
  },

  "IdentityServer": {
    "Url": "http://localhost:5400",
    "ClientId": "swagger",
    "ClientSecret": "secret"
  }
}